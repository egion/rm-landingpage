{% extends 'base.html.twig' %}

{% block body %}
    <div class="hero-wrap" style="background-image: url('{{ asset('assets/images/bg.jpg') }}'); background-size: cover">
        <div class="overlay"></div>
        <div class="container">
            <div class="d-none d-lg-block" style="padding-top: 8em"></div>
            <div class="row no-gutters slider-text align-items-center justify-content-center"
                 data-scrollax-parent="true">
                <div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                    <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                        {% trans %}Hilfe, die ankommt!{% endtrans %}
                    </h1>
                    <span class="mb-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"
                          style="background: #6c757d; color: #fff; padding: 0.2em; font-size: 2em;">
                        {% trans %}RemedyMatch ist eine gemeinnützige Logistikplattform, die deutschlandweit Bestand und Bedarf von medizinischen Schutzartikeln zusammenbringt!{% endtrans %}
                    </span>
                    <p class="mt-5 d-none d-md-block">
                        <iframe width="534" height="300" src="https://www.youtube.com/embed/QIhFcmSnDLQ?controls=0"
                                frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </p>
                    <p class="mt-5 d-md-none" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                        <a class="btn btn-info px-4 py-3 popup-youtube"
                           style="border-bottom: 0;"
                           href="https://www.youtube.com/watch?v=QIhFcmSnDLQ">
                            <span class="icon-play mr-2"></span>
                            {% trans %}Video abspielen{% endtrans %}
                        </a></p>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-counter ftco-intro" id="section-counter">
        <div class="container" id="prereg">
            <div class="row no-gutters">
                <div class="col-12 col-lg-6 d-flex justify-content-center counter-wrap ftco-animate">
                    <div class="block-18 color-1 align-items-stretch">
                        <div class="text">
                            {#
                        <!---<h3 class="mb-4">Portal im Aufbau - Start in wenigen Tagen!</h3>
                            <p>
                                Du möchtest Hilfe anbieten oder benötigst medizinische Schutzmaterialien? Dann trag dich
                                kostenfrei ein und wir benachrichtigen dich, sobald unser Portal genutzt werden kann.
                            </p>
                        --!>
                        #}
                            <h3 class="mb-4">{% trans %}Jetzt kostenlos registrieren!{% endtrans %}</h3>
                            <p>
                                {% trans %}Du möchtest Hilfe anbieten oder benötigst medizinische Schutzmaterialien? Dann trag dich
                                    kostenfrei ein und wir benachrichtigen dich, sobald unser Portal genutzt werden kann.{% endtrans %}
                            </p>
                            <p><br />
                                <a href="{{ path('registrierung') }}" class="btn btn-success btn-block">
                                    {% trans %}Jetzt kostenlos registrieren{% endtrans %}
                                </a>
                            </p>
                            {#
                            <!--
                            <span>Bisherige Spenden</span>
                            <strong class="number" data-number="23200">0</strong>
                            <span>Deutschlandweite Spenden</span>
                            -->
                            #}
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                    <div class="block-18 color-2 align-items-stretch">
                        <div class="text">
                            <h3 class="mb-4">{% trans %}Material spenden{% endtrans %}</h3>
                            <p><a class="btn btn-block btn-dark px-3 py-2 mt-2" href="/app/">{% trans %}Jetzt spenden!{% endtrans %}</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                    <div class="block-18 color-3 align-items-stretch">
                        <div class="text">
                            <h3 class="mb-4">{% trans %}Bedarf anmelden!{% endtrans %}</h3>
                            <p><a class="btn btn-block btn-dark px-3 py-2 mt-2" href="/app/">{% trans %}Bedarf anmelden!{% endtrans %}</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Briefing #}
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 d-flex services p-3 py-4 d-block">
                        <div class="icon d-flex mb-3"><span class="flaticon-donation-1"></span></div>
                        <div class="media-body pl-4">
                            <h3 class="heading">{% trans %}Helfen{% endtrans %}</h3>
                            <p>
                                {% trans %}Sei solidarisch in diesen schwierigen Zeiten und spende Schutzmaterial oder hilf beim Transport!{% endtrans %}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 d-flex services p-3 py-4 d-block">
                        <div class="icon d-flex mb-3"><span class="flaticon-charity"></span></div>
                        <div class="media-body pl-4">
                            <h3 class="heading">{% trans %}Bedarf anmelden{% endtrans %}</h3>
                            <p>{% trans %}Du benötigst dringend Material? Melde deinen Bedarf an und wir bringen dich mit einer
                                    passenden Spende zusammen!{% endtrans %}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 d-flex services p-3 py-4 d-block">
                        <div class="icon d-flex mb-3">
                            <span class="material-icons">code</span>
                        </div>
                        <div class="media-body pl-4">
                            <h3 class="heading">{% trans %}Open Source{% endtrans %}</h3>
                            <p>
                                {% trans %}Unser Projekt ist Open Source, schaut doch mal in unserem <a href="https://github.com/remedyMatch" target="_blank">Github</a> Account vorbei.{% endtrans %}

                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Schirmherrschaft #}
    <section class="ftco-section bg-light">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-5 heading-section ftco-animate text-center">
                    <h2 class="mb-4">{% trans %}Über uns{% endtrans %}</h2>
                    <p>{% trans %}RemedyMatch entstand als gemeinnütziges Open Source Projekt im Rahmen des <a
                                href="https://wirvsvirushackathon.org/" rel="nofollow" target="_blank">#WirVsVirus
                            Hackathons der Bundesregierung</a>.
                                                              Der bundesweite Hackathon #WirVsVirus am 20.-22. März 2020 war eine gemeinsame Veranstaltung von
                                                              Bundesregierung und sieben sozialen Initiativen
                                                              und steht unter der Schirmherrschaft des Chefs des Bundeskanzleramts Prof. Dr. Helge Braun.{% endtrans %}</p>
                    <div class="row">
                        <div class="col-8"><img
                                    src="https://wirvsvirushackathon.org/wp-content/uploads/2020/03/Die_Bundesregierung_Logo.svg_.png"
                                    style="width: 100%" alt="Logo der Bundesregierung"/></div>
                        <div class="col-4"><img
                                    src="https://wirvsvirushackathon.org/wp-content/uploads/2020/03/t4g-03-ueber-uns-bildschirmfoto-2019-10-08-um-183629-ogffjf6kqy5anh6dzmxhc8o5eenrwj50fm0r45zxgo.png"
                                    style="width: 100%" alt="Foto von Prof. Dr. Helge Braun"/></div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    {# Über uns #}
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-4 heading-section ftco-animate text-center">
                    <img src="{{ asset('assets/images/karte.png') }}" style="width: 90%"
                         alt="Karte von Deutschland"/>
                </div>
                <div class="col-md-8 heading-section ftco-animate">
                    <h2 class="mb-4">{% trans %}Über RemedyMatch{% endtrans %}</h2>
                    <p>{% trans %}RemedyMatch ist eine deutschlandweite Logistikplattform, die Bestand und Bedarf von medizinischen
                            Schutzartikeln zusammenbringt! RemedyMatch erfasst zu spendende Schutzartikel, wie Handschuhe,
                            Masken, Kittel oder Desinfektionsmittel, und sorgt dafür, dass diese dort ankommen, wo sie
                            gebraucht werden. So werden Lieferengpässe während der COVID-19 Pandemie überbrückt und der
                            persönliche Schutz der Helferinnen und Helfer gewährleistet.{% endtrans %}</p>
                    <h3>{% trans %}Für wen?{% endtrans %}</h3>
                    <p>{% trans %}Alle, die medizinisch tätig sind oder besondere Hygienevorschriften einhalten müssen und aktuell
                            einen Mangel erleben, dürfen einen Bedarf einstellen. Das können Kliniken, niedergelassene
                            Ärztinnen und Ärzte, Pflegekräfte, Mitarbeiter:innen im Einzelhandel oder pflegende Angehörige
                            sein.{% endtrans %}</p>

                    <h3>{% trans %}Wer spendet?{% endtrans %}</h3>
                    <p>{% trans %}Es sind alle aufgerufen, Schutzartikel kostenfrei zur Verfügung zu stellen, die diese aktuell
                            nicht benötigen. Das können Fitnessstudios, Restaurants, Hotels, Lackierer, Betriebe, Werkstätte
                            oder Privathaushalte sein. Jeder Handschuh hilft!
                            Außerdem sucht RemedyMatch freiwillige Einzelpersonen oder Unternehmen, die beim Transport von
                            Spenden unterstützen.{% endtrans %}</p>
                </div>
            </div>
            <div class="row d-flex">
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <span class="block-20"
                              style="background-image: url('{{ asset('assets/images/workers.jpg') }}');">
                        </span>
                        <div class="text p-4 d-block">
                            <h3 class="heading mt-3">{% trans %}<a href="#">Bedarfserbringer</a>{% endtrans %}</h3>
                            <p>{% trans %}Betriebe, Restaurants, Haushalte, Gesundheitseinrichtungen und Privatpersonen pflegen den
                                    Bestand lagernder Schutzartikel in die Plattform ein.{% endtrans %}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <span class="block-20"
                              style="background-image: url('{{ asset('assets/images/medicals.jpg') }}');">
                        </span>
                        <div class="text p-4 d-block">
                            <h3 class="heading mt-3"><a href="#">{% trans %}Bedarfsträger{% endtrans %}</a></h3>
                            <p>{% trans %}Krankenhäuser, niedergelassene Ärzte, Pflegedienste, Physiotherapeuten, pflegende
                                    Privatpersonen und weitere Institutionen können über RemedyMatch schnell und lokal
                                    verfügbare medizinische Schutzausrüstung finden und den Kontakt zu Spendern
                                    aufnehmen.{% endtrans %}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <span class="block-20"
                              style="background-image: url('{{ asset('assets/images/taxi.png') }}');">
                        </span>
                        <div class="text p-4 d-block">
                            <h3 class="heading mt-3">{% trans %}<a href="#">Logistik</a>{% endtrans %}</h3>
                            <p>{% trans %}Ebenso bietet RemedyMatch die Möglichkeit, Transportunterstützung anzufordern und
                                    Logistikpartner einzubinden. Hierzu können sich Logistikpartner (Betriebe oder
                                    Privatpersonen) registrieren, um gemeinnützige Unterstützung anzubieten.{% endtrans %}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if partners %}
        {% include 'blocks/partner-slider.html.twig' %}
    {% endif %}
    {% if mentions %}
        {% include 'blocks/about-us.html.twig' %}
    {% endif %}

    {# Kontakt #}
    <section class="ftco-section-3 img">
        <div class="overlay"></div>
        <div class="container">
            <div class="row d-md-flex">
                {#
                <div class="col-md-6 d-flex ftco-animate">
                    <div class="img img-2 align-self-stretch" style="background-image: url(images/bg_4.jpg);"></div>
                </div>
                #}
                <div class="col-md-12 volunteer pl-md-5 ftco-animate">
                    <h3 class="mb-3">{% trans %}Über RemedyMatch{% endtrans %}Kontakt</h3>
                    {% if emailSent == 1 %}
                        <h5>{% trans %}Über RemedyMatch{% endtrans %}🙏 Ihre Anfrage war erfolgreich! Vielen Dank! 🙏</h5>
                    {% else %}

                        <form action="{{ path('contact') }}" class="volunter-form" method="post">
                            <div class="form-group">
                                <input class="form-control" placeholder="{% trans %}Über RemedyMatch{% endtrans %}Name" type="text" name="name"
                                       required="required">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="{% trans %}Über RemedyMatch{% endtrans %}Email" type="text" name="email"
                                       required="required">
                            </div>
                            <div class="form-group">
                        <textarea class="form-control" cols="30" name="message" placeholder="{% trans %}Über RemedyMatch{% endtrans %}Nachricht"
                                  rows="3" required="required"></textarea>
                            </div>
                            <div class="form-group">
                                <input class="btn btn-white py-3 px-5" type="submit" value="{% trans %}Über RemedyMatch{% endtrans %}Nachricht absenden"
                                       name="submitted">
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}